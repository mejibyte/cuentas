<%= form_for @payment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :user %><br />
    <%= f.select :user_id, options_from_collection_for_select(User.all, "id", "name", @payment.user_id), :include_blank => true %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 2 %>
  </p>
  <p>
    <%= f.label :paid_on %><br />
    <%= f.date_select :paid_on %>
  </p>
  <p><%= f.submit %></p>
<% end %>
