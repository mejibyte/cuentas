<% title @user.name %>
<div>
  <h3>Pagos hechos por <%= @user.name %></h3>
  
  <% if @user.payments.empty? %>
    En el momento no hay ningún pago hecho por <%= @user.name %>.
  <% else %>
    <table>
      <tr>
        <th>Fecha</th>
        <th>Valor pagado</th>
        <th>Descripción</th>
      </tr>  
  
    <% @user.payments.each do |payment| %>
      <tr>
        <td><%= payment.paid_on %></td>
        <td><%= number_to_currency(payment.price) %></td>
        <td><%= payment.description %></td>
      </tr>  
    <% end %>
    </table>
  <% end %>
</div>

<p>
  <%= link_to 'Editar', edit_user_path(@user) %> |
  <%= link_to 'Volver a la lista de usuarios', users_path %>
</p>