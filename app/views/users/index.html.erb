<h1>Habitantes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th>Balance</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= format_balance(user.balance) %></td>
    <td><%= link_to 'Ver detalles', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
  </tr>
<% end %>
</table>

